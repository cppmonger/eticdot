---
const {
  itemName,
  itemPrice,
  itemOriginalPrice,
  imageUrl,
  brandName,
  brandUrl,
} = Astro.props;
---

<div class="card-body">
  <div class="item-image">
    <img src={imageUrl} alt={itemName} />
  </div>
  <div class="item-info">
    <div class="item-name">{itemName}</div>
    <div class="item-enterprise"><a href={brandUrl}>{brandName}</a></div>
    <div class="rating">
      <i class="bi bi-star"></i><i class="bi bi-star"></i><i class="bi bi-star"
      ></i><i class="bi bi-star"></i><i class="bi bi-star"></i>
    </div>
    <div class="item-price">
      {itemPrice}
    </div>
    <div class="item-original-price">{itemOriginalPrice}</div>
  </div>
</div>

<style>
  .card-body {
    width: 200px;
    text-align: center;
    padding: 0px 20px 20px 20px;
    border-radius: 20px;
    border: 2px solid rgb(189, 189, 189);
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    transition-duration: 0.2s;
    background-color: white;
    margin: 10px;
  }
  .card-body:hover {
    transform: scale(1.02);
    cursor: pointer;
  }
  .card-body:hover .blur {
    backdrop-filter: blur(10px);
  }
  .item-image img {
    width: 100%;
    height: 100%;
    -o-object-fit: contain;
    object-fit: contain;
  }
  .item-image {
    height: 200px;
  }
  .rating {
    margin: 5px 0 5px 0;
  }
  .item-price {
    margin: 5px 0 5px 0;
    position: relative;
    font-size: 24px;
  }
  .item-name {
    font-size: 20px;
    font-weight: 500;
  }
  .item-original-price {
    text-decoration: line-through;
  }
  .item-enterprise {
    font-weight: light;
  }
</style>
